<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gestor.fragments.inventario.AddMedicamentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/iv_dato_paciente_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/rinkart"
                android:text="@string/afegir_meds"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:text="@string/nom_med"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_nom_med"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:hint="@string/nom_med"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:text="@string/codi_nacional"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_codi_nacional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:hint="@string/codi_nacional"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:text="@string/use_type"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/et_use_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:hint="@string/use_type"
                        android:textSize="20sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:text="@string/type_of_adm"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/et_type_of_adm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/type_of_adm"
                        android:fontFamily="@font/rinkart_italic"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:text="@string/pres_need"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/et_pres_need"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pres_need"
                        android:fontFamily="@font/rinkart_italic"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:text="@string/contents"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/et_contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/contents"
                        android:fontFamily="@font/rinkart_italic"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:text="@string/form"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/et_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/form"
                        android:fontFamily="@font/rinkart_italic"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:text="@string/excipients"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/et_excipients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/excipients"
                        android:fontFamily="@font/rinkart_italic"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:text="@string/pvp"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/et_pvp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pvp"
                        android:fontFamily="@font/rinkart_italic"
                        android:textSize="20sp"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:text="@string/med_url"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/et_med_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/med_url"
                        android:fontFamily="@font/rinkart_italic"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:text="@string/quantitat"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/et_quant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/quantitat"
                        android:fontFamily="@font/rinkart_italic"
                        android:textSize="20sp"
                        android:inputType="number"/>

                </LinearLayout>


                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:fontFamily="@font/rinkart_italic"
                    android:onClick="saveInfo"
                    android:text="@string/afegir"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>



        </ScrollView>

    </LinearLayout>

</FrameLayout>