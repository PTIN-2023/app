<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity=""
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/top_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView_profile_medico"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="32dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/foto_perfil_usuario" />

                <Button
                    android:id="@+id/btn_perfil_user_foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/camara"
                    android:text="Editar"
                    android:textColor="#000000"
                    android:background="@android:color/transparent"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView_profile_medico"
                    app:layout_constraintStart_toStartOf="@+id/imageView_profile_medico"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_profile_medico" />


            </androidx.constraintlayout.widget.ConstraintLayout>



            <Button
                android:id="@+id/btn_cerrar_sesion_medico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#162676"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="Tancar sessiÃ³" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>