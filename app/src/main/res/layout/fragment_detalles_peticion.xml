<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".medico.fragments.detallesPeticion.DetallesPeticionFragment">

    <LinearLayout
        android:id="@+id/linearLyout_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:fontFamily="@font/rinkart"
            android:background="?attr/colorPrimary"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="@string/info_pacient">
        </TextView>

        <GridLayout
            android:id="@+id/grid_layout_primero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:columnCount="2"
            android:rowCount="4">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:fontFamily="@font/rinkart"
                android:textSize="18dp"
                android:text="@string/nom_info_pacient" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:fontFamily="@font/rinkart"
                android:textSize="18dp"
                android:text="@string/cognoms_info_pacient" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:fontFamily="@font/rinkart"
                android:textSize="18dp"
                android:text="@string/n_id_info_pacient" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:fontFamily="@font/rinkart"
                android:textSize="18dp"
                android:text="@string/n_comanda_info_pacient" />

            <TextView
                android:id="@+id/txt_nombre_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rinkart_italic"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:hint="@string/info_pacient_nom" />

            <TextView
                android:id="@+id/txt_apellido_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rinkart_italic"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:hint="@string/info_fecha_peticion" />

            <TextView
                android:id="@+id/txt_dni_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rinkart_italic"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:hint="DNI o NIF" />

            <TextView
                android:id="@+id/txt_detalles_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rinkart_italic"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:hint="@string/n_ref_comanda" />
        </GridLayout>
        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/rinkart"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="@string/llista_medicaments" />

        <ListView
            android:id="@+id/ListView_Peticion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp" />

    </LinearLayout>

</FrameLayout>