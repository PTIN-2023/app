<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    tools:context=".medico.fragments.aprobarPeticion.AprobarFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:fontFamily="@font/rinkart"
                android:background="?attr/colorPrimary"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="@string/info_pacient">
            </TextView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:columnCount="2"
                android:rowCount="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/rinkart"
                    android:textSize="18dp"
                    android:text="@string/nom_info_pacient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/rinkart"
                    android:textSize="18dp"
                    android:text="@string/cognoms_info_pacient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/rinkart"
                    android:textSize="18dp"
                    android:text="@string/n_id_info_pacient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/rinkart_italic"
                    android:textSize="18dp"
                    android:text="@string/n_comanda_info_pacient" />

                <TextView
                    android:id="@+id/txt_peticion_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rinkart"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="@string/info_pacient_nom" />

                <TextView
                    android:id="@+id/txt_peticion_apellido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rinkart_italic"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="@string/info_pacient_cognom" />

                <TextView
                    android:id="@+id/txt_peticion_dni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rinkart_italic"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="DNI o NIF" />

                <TextView
                    android:id="@+id/txt_peticion_pedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rinkart_italic"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="@string/n_ref_comanda" />
            </GridLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rinkart"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="@string/llista_medicaments" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_aprobar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rinkart"
                    android:background="?attr/colorPrimary"
                    android:textSize="22dp"
                    android:text="Opinió:"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/commentTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_peticion_comentario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:hint="Escriu el teu comentari aquí" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_aceptar_peticion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:fontFamily="@font/rinkart"
                    android:text="@string/info_pacient_aceptar"/>
                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_rechazar_peticion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:fontFamily="@font/rinkart"
                    android:text="@string/info_pacient_rebutjar"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>