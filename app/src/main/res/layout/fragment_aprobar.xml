<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    tools:context=".medico.fragments.aprobarPeticion.AprobarFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:fontFamily="@font/rinkart"
                android:background="?attr/colorPrimary"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="@string/info_pacient"
                android:id="@+id/textView_info_pacient"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <GridLayout
                android:id="@+id/GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:columnCount="2"
                android:rowCount="3"
                app:layout_constraintTop_toBottomOf="@id/textView_info_pacient"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/rinkart"
                    android:textSize="18dp"
                    android:text="@string/nom_info_pacient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/rinkart"
                    android:textSize="18dp"
                    android:text="@string/info_fecha_peticion" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/rinkart"
                    android:textSize="18dp"
                    android:text="@string/n_comanda_info_pacient" />

                <TextView
                    android:id="@+id/txt_peticion_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rinkart"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="@string/info_pacient_nom" />

                <TextView
                    android:id="@+id/txt_fecha_peticion_aprobar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rinkart_italic"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="YYY-MM_DD" />

                <TextView
                    android:id="@+id/txt_peticion_pedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rinkart_italic"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="@string/n_ref_comanda" />
            </GridLayout>

            <TextView
                android:id="@+id/llista_medicaments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rinkart"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="@string/llista_medicaments"
                app:layout_constraintTop_toBottomOf="@id/GridLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_aprobar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@id/llista_medicaments"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:id="@+id/opinio_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/recyclerView_aprobar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/opinio_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rinkart"
                    android:background="?attr/colorPrimary"
                    android:textSize="22dp"
                    android:text="@string/info_opinion"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/commentTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    app:layout_constraintTop_toBottomOf="@id/opinio_textView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_peticion_comentario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rinkart_italic"
                        android:textStyle="bold"
                        android:hint="@string/info_comentari" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/opinio_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btn_aceptar_peticion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:fontFamily="@font/rinkart"
                    android:text="@string/info_pacient_aceptar"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_rechazar_peticion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:fontFamily="@font/rinkart"
                    android:text="@string/info_pacient_rebutjar"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
