<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona un mètode de pagament"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_card_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Targeta de Crèdit"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="32dp"
        android:drawableLeft="@drawable/baseline_credit_card_24"/>

    <LinearLayout
        android:id="@+id/card_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Visibility "gone" amaga el layout fins que no es crida -->
        <!-- Camps a ingressar de la targeta -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de targeta"
            android:inputType="text" />

        <!--  -->

    </LinearLayout>

    <Button
        android:id="@+id/btn_paypal_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PayPal"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="32dp"
        android:drawableLeft="@drawable/paypal"/>

    <LinearLayout
        android:id="@+id/paypal_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Visibility "gone" amaga el layout fins que no es crida -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dades del comprador"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"/>
        <!-- Camps a ingressar de la targeta -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telèfon"
            android:inputType="number"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/crypto_payment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criptomonedes"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"
        android:drawableLeft="@drawable/baseline_currency_bitcoin_24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumen de la comanda"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: $100.00"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"/>

</LinearLayout>
