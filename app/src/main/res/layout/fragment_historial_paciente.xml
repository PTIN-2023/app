<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medico.fragments.historialPaciente.HistorialPacienteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Informe mèdic"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Metge: "/>

                <TextView
                    android:id="@+id/txt_informe_medico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:hint="Nom del Metge"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:background="@color/design_default_color_primary"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Dades personals"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:columnCount="2"
                android:rowCount="8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="Nom:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="Cognoms:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="Nº d'identificació:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="Data de naixement:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="Gènere:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="CIP:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="País:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="Província:" />

                <TextView
                    android:id="@+id/txt_informe_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="Nom del Pacient" />

                <TextView
                    android:id="@+id/txt_informe_apellido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="Cognoms del Pacient" />

                <TextView
                    android:id="@+id/txt_informe_dni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="DNI o NIF" />

                <TextView
                    android:id="@+id/txt_informe_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="mm/dd/yyyy" />

                <TextView
                    android:id="@+id/txt_informe_genero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="Masculí o femení" />

                <TextView
                    android:id="@+id/txt_informe_cip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="Nº targeta sanitària" />

                <TextView
                    android:id="@+id/txt_informe_pais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="País" />

                <TextView
                    android:id="@+id/txt_informe_provincia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:hint="Provincia" />
            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:background="@color/design_default_color_primary"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Antecedents personals"/>

            <TextView
                android:id="@+id/txt_informe_antecedente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp"
                android:hint="Descripció dels antecedents personals del pacient"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:background="@color/design_default_color_primary"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Problemes de salut actuals"/>

            <TextView
                android:id="@+id/txt_informe_problema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp"
                android:hint="Descripció dels problemes de salut actuals del pacient."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:background="@color/design_default_color_primary"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Tractaments mèdics i farmacològics."/>

            <TextView
                android:id="@+id/txt_informe_tratamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp"
                android:hint="Descripció del tractament mèdic i framacològics."/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>