<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/popup_recepta"
        android:layout_width="353dp"
        android:layout_height="240dp"
        android:background="@color/popup_background"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="170dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/rinkart"
            android:gravity="center"
            android:text="@string/info_receta_popup"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/receta_input_codi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_receta_codi_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rinkart_italic"
                android:textStyle="bold"
                android:hint="@string/info_receta_popup_codi" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/receta_input_quant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_receta_quant_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rinkart_italic"
                android:textStyle="bold"
                android:hint="@string/info_receta_popup_quant" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_recepta_acceptar_nou_med"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="1sp"
                android:text="@string/info_receta_popup_aceptar"/>

            <Button
                android:id="@+id/btn_recepta_cancelar_nou_med"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                android:layout_marginLeft="5sp"
                android:text="@string/info_receta_popup_cancelar"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>